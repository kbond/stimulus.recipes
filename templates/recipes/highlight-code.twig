{% block manifest %}
title: Highlight Code
description: Highlight code block with Shiki.
files:
    - src/Twig/Components/HighlightCode.php
    - templates/components/HighlightCode.html.twig
dependencies:
    node:
        - shiki
    php:
        - symfony/ux-twig-component
        - symfony/cache
        - spatie/shiki-php
references:
    - https://shiki.matsu.io/
{% endblock %}

{% block demo %}
<twig:HighlightCode code="echo sprintf('Hello %s!', $name);" language="php" theme="github-light" />
{% endblock %}
