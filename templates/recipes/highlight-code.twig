{% block manifest %}
title: Highlight Code
description: Highlight code block with Shiki with a copy button.
files:
    - src/Twig/Components/HighlightCode.php
    - templates/components/HighlightCode.html.twig
    - assets/styles/highlight-code.css
dependencies:
    node:
        - shiki
    php:
        - symfony/ux-twig-component
        - symfony/cache
        - spatie/shiki-php
    recipes:
        - tooltip
        - clipboard
references:
    - https://shiki.matsu.io/
{% endblock %}

{% block demo %}
<twig:HighlightCode code="echo sprintf('Hello %s!', $name);" language="php" theme="monokai" />
{% endblock %}
