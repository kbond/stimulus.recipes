{% block manifest %}
title: Highlight Code
description: Highlight code block with a copy button.
files:
    - src/Twig/Components/HighlightCode.php
    - templates/components/HighlightCode.html.twig
    - assets/styles/highlight-code.css
dependencies:
    php:
        - symfony/ux-twig-component
        - tempest/highlight
    recipes:
        - tooltip
        - clipboard
{% endblock %}

{% block demo %}
<twig:HighlightCode
    code="echo sprintf('Hello %s!', $name); // this is passed as the code attribute"
    language="php"
    class="mb-4"
/>

<twig:HighlightCode language="php">
    echo sprintf('Hello %s!', $name); // this is passed as the content block
</twig:HighlightCode>
{% endblock %}
