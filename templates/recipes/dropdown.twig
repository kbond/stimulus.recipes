{% block manifest %}
title: Dropdown
description: Dropdown.
files:
    - assets/controllers/dropdown_controller.js
dependencies:
    recipes:
        - button
references:
    - https://www.stimulus-components.com/docs/stimulus-dropdown
{% endblock %}

{% block demo %}
<div class="relative inline-block" data-controller="dropdown">
    <twig:Button data-action="dropdown#toggle click@window->dropdown#hide">
        Options
        <svg
            class="-mr-1 ml-2 h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
        >
            <path
                fill-rule="evenodd"
                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                clip-rule="evenodd"
            />
        </svg>
    </twig:Button>
    <ul
        hidden
        data-dropdown-target="content"
        class="
              absolute
              z-10
              right-0
              mt-2
              min-w-44
              rounded-md
              shadow-lg
              bg-white
              ring-1 ring-black ring-opacity-5
              focus:outline-none"
    >
        <li class="text-gray-700 hover:bg-gray-100 hover:text-gray-900 block px-4 py-2 text-sm"><button>First</button></li>
        <li class="text-gray-700 hover:bg-gray-100 hover:text-gray-900 block px-4 py-2 text-sm"><button>Second</button></li>
        <li class="text-gray-700 hover:bg-gray-100 hover:text-gray-900 block px-4 py-2 text-sm"><button>Third</button></li>
    </ul>
</div>
{% endblock %}
