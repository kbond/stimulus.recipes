{% block manifest %}
title: Alert
description: Alert with optional close button.
dependencies:
    recipes:
        - closable
    php:
        - symfony/ux-twig-component
files:
    - templates/components/Alert.html.twig
    - assets/styles/alert.css
references:
    - https://flowbite.com/docs/components/alerts/
{% endblock %}

{% block demo %}
<twig:Alert type="info" class="mb-4">
    Info type
</twig:Alert>

<twig:Alert type="success" class="mb-4">
    Success type
</twig:Alert>

<twig:Alert type="warning" class="mb-4">
    Warning type
</twig:Alert>

<twig:Alert type="danger" class="mb-4">
    Danger type
</twig:Alert>

<twig:Alert class="mb-4">
    Default type
</twig:Alert>

<twig:Alert closeable type="info" class="mb-4">
    Closeable Info type
</twig:Alert>

<twig:Alert closeable type="success" class="mb-4">
    Closeable Success type
</twig:Alert>

<twig:Alert closeable type="warning" class="mb-4">
    Closeable Warning type
</twig:Alert>

<twig:Alert closeable type="danger" class="mb-4">
    Closeable Danger type
</twig:Alert>

<twig:Alert closeable class="mb-4">
    Closeable Default type
</twig:Alert>
{% endblock %}
