{% block manifest %}
title: Toast
description: Toast notifications
controller: assets/controllers/closeable_controller.js
dependencies:
    js:
        - stimulus-use
credit: https://symfonycasts.com/screencast/last-stack/toast
{% endblock %}

{% block demo %}
<div
    class="fixed top-5 right-5 flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800"
    role="alert"
    data-controller="closeable"
    data-closeable-auto-close-value="5000"
    data-turbo-temporary
>
    You did a great job!

    <button
        type="button"
        title="Close this message"
        data-action="closeable#close"
        class="absolute top-2 right-3"
        aria-label="Close"
    >
        <span class="sr-only">Close</span>
        <svg class="w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 6l-12 12" /><path d="M6 6l12 12" /></svg>
    </button>

    <div
        class="mx-3 absolute bottom-0 left-0 right-0 h-1 rounded bg-green-500 w-auto transition-w ease-linear"
        data-closeable-target="timerbar"
    ></div>
</div>
{% endblock %}
